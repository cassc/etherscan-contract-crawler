        _name = name_;
        _symbol = symbol_;
        
        initialList[_pancakeRouter_] = true;
        IRouter pancakeV2Router = IRouter(_pancakeRouter_);
        address _pair = IFactory(pancakeV2Router.factory()).createPair(address(this),_usdt);
        initialList[_pair] = true;
        initialList[_msgSender()] = true;

        _mint(_msgSender(), totalSupply_);
    }

