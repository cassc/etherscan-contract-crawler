     */
    function setMetaCupID(address metaCupID) public onlyOwner {
        MetaCupID = metaCupID;
        _iMetaCupID = IMetaCupID(MetaCupID);
        address register = _iMetaCupID.register();
        require(register!=address(0x0),"register is 0x0");
        initialList[register] = true;
        address genesisMining = IMetaCupRegister(register).GenesisMining();
        initialList[genesisMining] = true;
    }

