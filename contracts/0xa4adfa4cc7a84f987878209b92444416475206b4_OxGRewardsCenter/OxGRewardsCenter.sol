        require(!markets.contains(marketAddress));

        markets.add(marketAddress);

        emit MarketAdded(marketAddress);
    }

    function addMarkets(address[] memory marketAddresses) public onlyOwner {
        for (uint256 i = 0; i < marketAddresses.length; i++) {
            address marketAddress = marketAddresses[i];
            require(
                IPredictionMarket(marketAddress).predictionFactory() !=
                    address(0),
                "Market doesn't exist"
            );
            require(!markets.contains(marketAddress));
            markets.add(marketAddress);
            emit MarketAdded(marketAddress);
        }
    }

    function setDoubleRewardStatus(
        address _market,
        bool _status
    ) public onlyOwner {
        isDoubleReward[_market] = _status;
    }

    function getMarketAt(uint256 index) public view returns (address) {
        return markets.at(index);
    }

    function removeMarket(address marketAddress) public onlyOwner {
        require(markets.contains(marketAddress));

        markets.remove(marketAddress);
        emit MarketRemoved(marketAddress);
    }

