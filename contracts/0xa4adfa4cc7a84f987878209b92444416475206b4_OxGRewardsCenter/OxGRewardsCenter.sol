            uint256 value = IPredictionMarket(contractAddress)
                .getUserActivatedCodesCount(user);

            if (value != 0) {
                if (isDoubleReward[contractAddress]) {
                    totalSum += value * 2;
                } else {
                    totalSum += value;
                }
            }
        }

        return totalSum;
    }

