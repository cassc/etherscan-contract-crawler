        }
        return totalClaimable;
    }

    function redeemCode(address user) public isActivated nonReentrant {
        uint256 redeemableCodes = getNumOfRedeemableCodes(user);
        uint256 claimable0xG = previewClaimableTokens(user);
        require(redeemableCodes > 0, "All codes already redeemed");
        require(claimable0xG > 0, "Nothing to claim");
        require(totalRedeemedCodes <= 5_000, "All codes redeemed");

        IERC20(zeroxG).transfer(user, claimable0xG);
        totalRedeemedCodes += redeemableCodes;
        redeemedCodesCount[user] += redeemableCodes;
        total0xGClaimed[user] += claimable0xG;

        if (totalRedeemedCodes >= halvingThreshold) {
            currentPayoutPerCode /= 2;
            halvingThreshold += 250;
        }

        emit CodeRedeemed(user, redeemableCodes, claimable0xG);
    }
}