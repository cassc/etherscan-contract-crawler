import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "./ReplicatorInterface.sol";

contract Configurator is Ownable {

    struct TokenURI {
        uint256 tokenId;
        string arweaveHash;
    }

    address private immutable REPLICATOR;

    constructor(address replicator) {
        REPLICATOR = replicator;
    }

    /**
     * Change the replicator owner to the new owner
     */
    function changeReplicatorOwner(address newOwner) public onlyOwner {
        require(Ownable(REPLICATOR).owner() == address(this), "Contract is not the owner");
        Ownable(REPLICATOR).transferOwnership(newOwner);
    }

    /**
     * Set replicator token uri's
     */
    function setTokenURIs(TokenURI[] calldata configs) public onlyOwner {
        for (uint256 i = 0; i < configs.length; i++) {
            ReplicatorInterface(REPLICATOR).setTokenURI(configs[i].tokenId, string(abi.encodePacked("https://arweave.net/", configs[i].arweaveHash)));
        }
    }
}