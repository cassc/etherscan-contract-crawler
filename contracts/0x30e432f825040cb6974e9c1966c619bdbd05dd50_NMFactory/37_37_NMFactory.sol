pragma solidity ^0.8.13;

import "openzeppelin-contracts/access/Ownable.sol";
import "openzeppelin-contracts/proxy/ERC1967/ERC1967Proxy.sol";
import "./NM721A.sol";

contract NMFactory is Ownable {
    
    address public NM721Aimplementation;

    event DropDeployed(address contractAddress);

    constructor(address _NM721Aimplementation) {
        NM721Aimplementation = _NM721Aimplementation;
    }

    function createProxyContract(string memory _name, string memory _symbol, string memory _baseUri, uint256 _maxTotalSupply, address[] memory _payees, uint256[] memory _shares) public onlyOwner returns (address) {
        ERC1967Proxy newProxy = new ERC1967Proxy(
            address(NM721Aimplementation), 
            abi.encodeWithSelector(NM721A(payable(address(0))).initialize.selector, msg.sender, _baseUri, _name, _symbol, _maxTotalSupply, _payees, _shares)
        );
        NM721A(payable(address(newProxy))).grantRole(NM721A(payable(address(newProxy))).ADMIN_ROLE(), msg.sender);
        NM721A(payable(address(newProxy))).grantRole(NM721A(payable(address(newProxy))).MINTER_ROLE(), msg.sender);
        emit DropDeployed(address(newProxy));
        return address(newProxy);
    }
}