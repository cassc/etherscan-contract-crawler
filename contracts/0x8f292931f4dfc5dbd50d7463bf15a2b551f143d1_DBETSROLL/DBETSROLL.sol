contract DBETSROLL is Ownable {
    event Roll(bool won,uint256 numrolled,uint256 rollchance,uint256 tokensrewarded);

    using SafeMath for uint256;

    mapping (uint256 => uint256) public multiplierRate;

    uint256 private PRECISION_FACTOR = 10000;
    IERC20 public gambleToken;
    uint256 public attempts = 0;
    uint256 public wins = 0;
    uint256 public taxRate = 300;
    uint256 public _minTokensNeeded = 100 * 1e18;
    uint256 public _maxTokensNeeded = 20_000_000 * 1e18;
    address private taxWallet = 0x5aaF9f1d7d6B6cB9F9961994e77eE5C0B9f1c90c;

    constructor () {
        multiplierRate[1] = 100000;
        multiplierRate[2] = 50000;
        multiplierRate[4] = 25000;
        multiplierRate[5] = 20000;
        multiplierRate[8] = 12500;
        multiplierRate[10] = 10000;
        multiplierRate[16] = 6250;
        multiplierRate[20] = 5000;
        multiplierRate[40] = 2500;
        multiplierRate[50] = 2000;    
    }

    function ROLL(uint256 tokenAmount, uint256 multiplier) external returns (bool,uint256,uint256,uint256) {
        require(tokenAmount >= _minTokensNeeded, "not enough tokens sent");
        require(tokenAmount <= _maxTokensNeeded, "over max limit");
        require(gambleToken.balanceOf(address(this)) > tokenAmount, "not enough tokens stored in contract");
        attempts++;

        // transfer tokens to contract first
        gambleToken.transferFrom(_msgSender(), address(this), tokenAmount);
        uint256 fees = tokenAmount.mul(taxRate).div(PRECISION_FACTOR);
        uint256 tokensRewarded = tokenAmount * multiplier - fees;

        // generate random number
        uint256 _numRolled = (uint(keccak256(abi.encodePacked(block.timestamp,_msgSender(),attempts))) % 100000);
        uint256 _chance = multiplierRate[multiplier];

        if (_numRolled < _chance) {
            gambleToken.transfer(_msgSender(),tokensRewarded);
            wins++;
            if (fees > 0) {
                gambleToken.transfer(taxWallet,fees);
            }
            emit Roll(true,_numRolled,_chance,tokensRewarded);
            return (true,_numRolled,_chance,tokensRewarded);
        }
        else {
            gambleToken.transfer(taxWallet,fees);
            emit Roll(false,_numRolled,_chance,tokensRewarded);
            return (false,_numRolled,_chance,tokensRewarded);
        }
    }

    function checkNumRoll(uint256 tokenAmount, uint256 multiplier) view public returns(bool,uint256,uint256,uint256) {
        bool _winner = false;
        uint256 _numRolled = (uint(keccak256(abi.encodePacked(block.timestamp,_msgSender(),attempts))) % 100000);
        uint256 rollChance = multiplierRate[multiplier];
        if (_numRolled < rollChance) {
            _winner = true;
        }
         if (_winner) {
            uint256 tokensRewarded = tokenAmount * multiplier;
            return (true,_numRolled,rollChance,tokensRewarded);
        }
        else {
            uint256 tokensRewarded = 0;
            return (false,_numRolled,rollChance,tokensRewarded);
        }
    }

    function updateTaxWallet(address _taxWallet) external onlyOwner {
        //can set to contract of token
        taxWallet = _taxWallet;
    }
    
    function updateTokensNeeded(uint256 _minNeeded, uint256 _maxNeeded) external onlyOwner {
        _minTokensNeeded = _minNeeded * 1e18;
        _maxTokensNeeded = _maxNeeded * 1e18;
    }

    function updateTaxesRate(uint256 _newtax) external onlyOwner {
        require(_newtax < 1500, "Cannot set taxes higher than 15%");
        taxRate = _newtax;
    }

    function updateMultiplierRates(uint256 _multiplier, uint256 _newchance) external onlyOwner {
        multiplierRate[_multiplier] = _newchance;
    }


    function setGamblingToken(address tokenAddress) external onlyOwner {
        gambleToken = IERC20(tokenAddress);
    }

    function rescueStuckTokens() external onlyOwner {
        if (gambleToken.balanceOf(address(this)) > 0) {
            gambleToken.transfer(_msgSender(), gambleToken.balanceOf(address(this)));
        }
        if (address(this).balance > 0) {
            bool success;
            (success, ) = payable(_msgSender()).call{value: address(this).balance,gas: 30000}("");
        }
    }

    function withdrawStuckTokens(uint256 tokenAmount, address _wallet) external onlyOwner {
        require(gambleToken.balanceOf(address(this)) > tokenAmount, "Not enough tokens in contract");
        gambleToken.transfer(_wallet, tokenAmount);
    }
}