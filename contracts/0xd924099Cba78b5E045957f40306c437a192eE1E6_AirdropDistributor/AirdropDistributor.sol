        _grantRole(DEFAULT_ADMIN_ROLE, defaultAdmin);
        _grantRole(OPERATOR_ROLE, operator);
    }

    function _verifyBatchParams(
        bytes32 airdropId,
        address treasury,
        uint256 budget,
        uint256 nrInvestors
    ) internal view virtual {
        if (airdropId == bytes32(0)) {
            revert AirdropInvalidId(bytes32(0));
        }
        if (treasury == address(0)) {
            revert AirdropInvalidTreasury(address(0));
        }
        if (budget == 0 || nrInvestors == 0) {
            revert AirdropIncorrectFinancialData(budget, nrInvestors);
        }
        uint256 treasuryBalance = IERC20(rewardToken).balanceOf(treasury);
        if (budget > treasuryBalance) {
            revert AirdropInsufficientTreasuryFunds(budget, treasuryBalance);
        }
    }

    function _transferRewards(address treasury, uint256 budget, InvestorReward[] memory transferData) internal {
        uint256 length = transferData.length;
        uint256 totalTransfered;

        for (uint256 i; i < length; ) {
            InvestorReward memory investor = transferData[i];
            _checkInvestorData(totalTransfered, budget, investor);
            _transferTokens(treasury, investor);
            unchecked {
                totalTransfered += investor.reward;
                ++i;
            }
        }
    }

    function _checkInvestorData(
        uint256 totalTransfered,
        uint256 budget,
        InvestorReward memory investor
    ) internal pure virtual {
        address wallet = investor.wallet;
        uint256 reward = investor.reward;
        if (wallet == address(0) || reward == 0) {
            revert AirdropIncorrectInvestorData(wallet, reward);
        }
        if (totalTransfered + reward > budget) {
            revert AirdropBatchOutOfBudget(reward, totalTransfered, budget);
        }
    }

    function _transferTokens(address from, InvestorReward memory investor) internal {
        SafeERC20.safeTransferFrom(IERC20(rewardToken), from, investor.wallet, investor.reward);
    }
}