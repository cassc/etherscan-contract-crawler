contract router is EIP712{
    using ECDSA for bytes32;

    struct cTransfer {
        address sender;
        address bridge;
        address receiver;
        address tokenAddress;
        uint256 amountFromSender;
        uint256 amountToReceiver;
        uint256 nonce;
        uint256 toChainId;
    }


    struct Permit {
        address owner;
        address spender;
        uint256 value;
        uint256 deadline;
        uint8 v;
        bytes32 r;
        bytes32 s;        
    }

    bytes32 private constant _CCT = keccak256("crossChainTransfer(address sender,address bridge,address receiver,address tokenAddress,uint256 amountFromSender,uint256 amountToReceiver,uint256 nonce,uint256 toChainId)");

    bytes4 private constant _transferFrom = bytes4(keccak256("transferFrom(address,address,uint256)"));

    string _name;
    string _version;

    mapping(address => uint256) private _nonces;
    mapping(address => bool) private _relayersWhitelist;

    constructor (string memory protocolName, string memory protocolVersion) EIP712(protocolName, protocolVersion){
        _name = protocolName;
        _version = protocolVersion;
        _relayersWhitelist[msg.sender] = true;
    }

    function verify(cTransfer memory ct, bytes calldata signature) view public returns (bool) {

        address signer = _hashTypedDataV4(keccak256(abi.encode(
            _CCT,
            ct.sender,
            ct.bridge,
            ct.receiver,
            ct.tokenAddress,
            ct.amountFromSender,
            ct.amountToReceiver,
            ct.nonce,
            ct.toChainId
        ))).recover(signature);

        return _nonces[ct.sender] == ct.nonce && signer == ct.sender;
    }

    function crossChainTransfer(cTransfer calldata ct, 
                                bytes calldata signature,
                                Permit calldata _permit,
                                uint256 amount,
                                bool isPermit,
                                bytes calldata callDataBridge) public payable{

        require(_relayersWhitelist[msg.sender], "Sender is not whitelisted");

        require(verify(ct, signature), "Signature does not match");

        _nonces[ct.sender]++;

        if (isPermit) {
            sendPermit(_permit,  ct.tokenAddress);
        }

        (bool success, ) = ct.tokenAddress.call{value: 0}
                            (abi.encodeWithSelector(
                            _transferFrom, 
                            ct.sender, 
                            address(this), 
                            ct.amountFromSender));

        require(success, "Function transferFrom failed");

        (bool sent, ) = ct.bridge.call{value: amount}(callDataBridge);

        require(sent, "Function crossChainTransfer failed");

    }

    function sendPermit(Permit calldata _permit, address token) private {
        IERC20Permit(token).permit(_permit.owner, _permit.spender, _permit.value, _permit.deadline, _permit.v, _permit.r, _permit.s);
    }

    function sendArrove(address token, address approveAddress, uint256 value) public {
        IERC20(token).approve(approveAddress, value);
    }

    function getNonce(address from) public view returns (uint256) {
        return _nonces[from];
    }

    function isRelayerWhitelisted(address sender) public view returns (bool) {
        return _relayersWhitelist[sender];
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function version() public view returns (string memory) {
        return _version;
    }
}