pragma solidity ^0.8.4;

import "./ERC721A.sol";
import "Ownable.sol";

contract CHESTERCHEETOS is ERC721A, Ownable {

    uint256 MAX_MINTS = 3;
    uint256 MAX_SUPPLY = 1986;
    uint256 public mintRate = 0 ether;
    bool public paused = true;

    constructor() ERC721A("CHESTER", "CHESTER") {}

    function mint(address _to, uint256 _mintamount) public  {

        require(!paused);
        require(_mintamount + _numberMinted(msg.sender) <= MAX_MINTS, "Exceeded the limit");
        require(totalSupply() + _mintamount <= MAX_SUPPLY, "Not enough tokens left");
        _safeMint(_to, _mintamount);
    }
    
    //  @dev  Token URI management
    string private _baseTokenURI;

    function setBaseURI(string calldata baseURI) external onlyOwner {
        _baseTokenURI = baseURI;
    }

    function _baseURI() internal view virtual override returns (string memory) {
        return _baseTokenURI;
    }

    //  @dev  Start/Pause the contract

    function pause(bool _state) public onlyOwner {
        paused = _state;
    }

    // @dev use it for giveaway to influencers
    function gift(uint256 _mintamount, address _to) public onlyOwner  {
       uint256 supply = totalSupply();
       require(supply + _mintamount <= MAX_SUPPLY, "max NFT limit exceeded");
       _safeMint(_to, _mintamount);
    
    }
}