    function _safeMintMany(address to, uint256 amount) internal virtual {
        _safeMintMany(to, amount, "");
    }

    function _safeMintMany(
        address to,
        uint256 amount,
        bytes memory _data
    ) internal virtual {
        require(to != address(0), "ERC721: mint to the zero address");

        // Predetermine the range of tokens to mint.
        uint256 firstTokenToMint = _totalSupply;
        uint256 afterLastTokenToMint = firstTokenToMint + amount;

        uint256 ownerTokenIndex = _balances[to];

        for (uint256 tokenId=firstTokenToMint; tokenId<afterLastTokenToMint; tokenId++) {
            // Functionality from _mint -> _beforeTokenTransfer -> _addTokenToOwnerEnumeration.
            _ownedTokensIndex[tokenId] = ownerTokenIndex;
            _ownedTokens[to][ownerTokenIndex++] = tokenId;

            // Functionality from _mint.
            _owners[tokenId] = to;
            emit Transfer(address(0), to, tokenId);
        }

        // Balances normally updated in _mint separately for each token.
        _balances[to] += amount;

        // Increment totalSupply. In a single mint would happen in _beforeTokenTransfer.
        _totalSupply += amount;

        // Optimization to skip safe receiver check unless receiver is a contract.
        if (to.isContract()) {
            for (uint256 tokenId=firstTokenToMint; tokenId<afterLastTokenToMint; tokenId++) {
                require(
                    _checkOnERC721Received(address(0), to, tokenId, _data),
                    "ERC721: transfer to non ERC721Receiver implementer"
                );
            }
        }
    }
