contract CARAMEL is
    ERC20,
    ERC20Burnable,
    Ownable,
    OwnerRecovery
{
    using SafeMath for uint256;
    address public NFTManager;
    address public immutable treasury;
    mapping(address => bool) public _isExcludedFromFee;
    bool private inSwap;

    address public usdt;

    IUniswapV2Router02 public uniswapV2Router;
    address public uniswapV2Pair;

    uint256 public constant _tTotal = 1000000000 * 10**18;

    uint256 public transferFee = 10;
    uint256 public buyFee = 3;
    uint256 public sellFee = 40;

    uint256 public holdLimit = 10000000 * 10**18;

    modifier onlyNFTManager() {
        address sender = _msgSender();
        require(
            sender == address(NFTManager),
            "CARAMEL: Not NFTManager"
        );
        _;
    }

    modifier lockTheSwap() {
        inSwap = true;
        _;
        inSwap = false;
    }

    constructor(address _treasury, address _usdt) ERC20("CARAMEL", "CML") {
        require(
            _treasury != address(0),
            "CARAMEL: treasury is not set"
        );
        require(
            _usdt != address(0),
            "CARAMEL: usdt is not set"
        );

        treasury = _treasury;
        usdt = _usdt;

        _isExcludedFromFee[owner()] = true;
        _isExcludedFromFee[treasury] = true;
        _isExcludedFromFee[address(this)] = true;
        _mint(treasury, _tTotal);

        //mainnet v2 router: 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
        //rinkeby router: 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
        uniswapV2Router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
        _approve(address(this), address(uniswapV2Router), type(uint256).max);
        uniswapV2Pair = IUniswapV2Factory(uniswapV2Router.factory()).createPair(address(this), usdt);
        IERC20(uniswapV2Pair).approve(address(uniswapV2Router), type(uint).max);
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        super._beforeTokenTransfer(from, to, amount);
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        require(from != address(0), "CARAMEL: transfer from the zero address");
        require(to != address(0), "CARAMEL: transfer to the zero address");
        
        uint256 fees = 0;

        if (!_isExcludedFromFee[from]) {
            if (to == uniswapV2Pair) {
                fees = amount.mul(sellFee).div(100);
            } else if (from == uniswapV2Pair) {
                fees = amount.mul(buyFee).div(100);
            } else {
                fees = amount.mul(transferFee).div(100);
            }
            amount = amount.sub(fees);
        }

        holdLimit = totalSupply().div(100);

        if(!_isExcludedFromFee[to] && to != uniswapV2Pair) {
            require(balanceOf(to).add(amount) <= holdLimit, "CARAMEL: Balance exceeds limit");
        }

        if (fees > 0) {
            super._transfer(from, treasury, fees);
        }
        super._transfer(from, to, amount);
    }

    function _afterTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        super._afterTokenTransfer(from, to, amount);
    }

    function swapTokenForUSDT(address account, uint256 amount)
        external
        onlyNFTManager
        lockTheSwap
    {
        require(NFTManager != address(0), "CARAMEL: NFT manager address is not 0");
        super._mint(address(this), amount);
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = usdt;
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0, // accept any amount of ETH
            path,
            account,
            block.timestamp
        );
    }

    function accountBurn(address account, uint256 amount)
        external
        onlyNFTManager
    {
        require(NFTManager != address(0), "CARAMEL: NFT manager address is not 0");
        super._burn(account, amount);
    }

    function accountReward(address account, uint256 amount)
        external
        onlyNFTManager
    {
        require(NFTManager != address(0), "CARAMEL: NFT manager address is not 0");
        super._mint(account, amount);
    }

    function liquidityBurn(uint256 amount) external onlyNFTManager {
        require(NFTManager != address(0), "CARAMEL: NFT manager address is not 0");
        super._burn(treasury, amount);
    }

    function liquidityReward(uint256 amount) external onlyNFTManager {
        require(NFTManager != address(0), "CARAMEL: NFT manager address is not 0");
        super._mint(treasury, amount);
    }

    function excludeFromFee(address account, bool status) external onlyOwner {
        require(account != address(0), "CARAMEL: zero address");
        _isExcludedFromFee[account] = status;
    }

    function setNFTManager(address _NFTManager) external onlyOwner {
        require(NFTManager == address(0), "CARAMEL: NFT manager address is 0");
        require(_NFTManager != address(0), "CARAMEL: NFT manager address is not 0");
        NFTManager = _NFTManager;
        _isExcludedFromFee[NFTManager] = true;
    }
}