contract ReferralProgram {
    address public owner;

    constructor() {
        owner = msg.sender;
    }

    mapping(address => uint256) public transferHistory;

    function updateTransferHistory(address _agent, uint256 _amount)
        external
        returns (address, uint256)
    {
        require(msg.sender == owner, "Caller is not the owner");
        transferHistory[_agent] += _amount;
        return (_agent, transferHistory[_agent]);
    }

    // this function is used to get history of payed commission to specific account
    function getTransferHistory(address _wallet)
        external
        view
        returns (uint256)
    {
        require(_wallet != address(0), "Trying to query none existent agent");
        return transferHistory[_wallet];
    }
}

contract TropyverseLand is Ownable, ERC721Enumerable, ERC721URIStorage {
    // list of constant strings
    string private constant PUBLIC_SALE_NOT_ACTIVE =
        "Public sale is not active";
    string private constant MAX_PER_WALLET_REACHED = "Exceeded per wallet!";
    string private constant MAX_MINT_AMOUNT_PER_TX = "Exceeded max per tx";
    string private constant SUPPLY_LIMIT_ERROR = "Max Supply reached";
    string private constant INVALID_SIGNATURE = "Invalid signature";
    string private constant ALREADY_MINTED = "Token is already minted";
    string private constant SET_MANAGER_ERROR = "Trying to set current manager";
    string private constant SET_SIGNER_ERROR =
        "Trying to set current signer address";
    string private constant INVALID_TOKEN_ID = "Token not exist";
    string private constant CALLER_IS_NOT_OWNER =
        "Caller is not the owner of token";
    string private constant TOKEN_ALREADY_APPROVED =
        "Token is already approved";
    string private constant TOKENS_ALREADY_APPROVED =
        "Caller already approved all tokens";
    string private constant MAKRETPLACE_NOT_LAUNCHED =
        "Mareketplace is not started";

    // Keep a mapping of used IPFS hashes
    mapping(string => uint8) public usedTokenURIs;
    // Keep number of token minted by address
    mapping(address => uint256) public addressMintedBalance;
    // Keep used nonce for replay attack
    mapping(string => bool) private usedNonce;

    // Maximum amounts of mintable tokens
    uint256 public constant MAX_SUPPLY = 10100;
    uint256 constant MAX_PER_WALLET = 10;
    uint256 constant PURCHASE_LIMIT = 5;

    // collection metadata uri
    string _contractURI;
    // Keep marketplace address
    address payable marketplaceAddress;
    // Address of the royalties recipient
    address private _royaltiesReceiver;
    // Address sales manager
    address payable manager;
    // signer address
    address signerAddress;
    // referral program
    address referralProgram;
    // Percentage of each sale to pay as royalties
    uint256 public royaltiesPercentage = 10;
    // Keep public sale status
    bool public publicSaleActive = true;

    struct Token {
        string tokenURI;
        uint256 tokenId;
    }

    // Events
    event NewToken(address indexed _receiver, uint256 _tokenId, string ipfsUri);
    event NewTokens(address indexed _receiver, uint256 _totalPrice, Token[]);
    event NewTokensWithCommission(
        address indexed receiver,
        uint256 _totalPrice,
        Token[],
        address _recruiter,
        address _agent
    );
    event Deposit(address indexed _receiver, uint256 _amount);
    event Withdraw(address indexed _receiver, uint256 _amount);
    event TokenApproved(
        address indexed _marketAddress,
        address indexed _owner,
        uint256 _tokenId
    );

    
    // this function checks number of minted lands by one wallet address
    modifier mintCompliance(string[] memory _assets) {
        uint256 ownerMintedCount = addressMintedBalance[_msgSender()];
        require(publicSaleActive == true, PUBLIC_SALE_NOT_ACTIVE);
        require(
            (_assets.length + ownerMintedCount) <= MAX_PER_WALLET,
            MAX_PER_WALLET_REACHED
        );
        require(
            _assets.length > 0 && _assets.length <= PURCHASE_LIMIT,
            MAX_MINT_AMOUNT_PER_TX
        );

        require(
            totalSupply() + _assets.length <= MAX_SUPPLY,
            SUPPLY_LIMIT_ERROR
        );
        _;
    }

    modifier alreadyApproved(uint256 _tokenId) {
        require(_exists(_tokenId), INVALID_TOKEN_ID);
        require(marketplaceAddress != address(0), MAKRETPLACE_NOT_LAUNCHED);
        require(
            getApproved(_tokenId) != marketplaceAddress,
            TOKEN_ALREADY_APPROVED
        );
        _;
    }

    constructor(
        string memory _name,
        string memory _symbol,
        address _manager,
        string memory _collectionURI,
        address _signerAddress,
        address _initialRoyaltiesReceiver
    ) ERC721(_name, _symbol) {
        manager = payable(_manager);
        _contractURI = _collectionURI;
        signerAddress = _signerAddress;
        _royaltiesReceiver = _initialRoyaltiesReceiver;

        ReferralProgram rf = new ReferralProgram();
        referralProgram = address(rf);
    }

    // override functions
    function _baseURI() internal pure override returns (string memory) {
        return "";
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721, ERC721URIStorage)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable)
        returns (bool)
    {
        return
            interfaceId == type(IERC2981).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override(ERC721, ERC721Enumerable) {
        super._beforeTokenTransfer(from, to, amount);
    }

    function _burn(uint256 tokenId)
        internal
        override(ERC721, ERC721URIStorage)
    {
        super._burn(tokenId);
    }

    function contractURI() public view returns (string memory) {
        return _contractURI;
    }

    function royaltiesReceiver() external view returns (address) {
        return _royaltiesReceiver;
    }

    ///////////////////////////////////////////////////// only owner function
    function getManager() external view onlyOwner returns (address) {
        return manager;
    }

    function setManager(address payable _manager)
        external
        onlyOwner
        returns (address payable)
    {
        require(manager != _manager, SET_MANAGER_ERROR);
        manager = _manager;
        return _manager;
    }

    function setRoyaltiesReceiver(address newRoyaltiesReceiver)
        external
        onlyOwner
    {
        require(newRoyaltiesReceiver != _royaltiesReceiver);
        _royaltiesReceiver = newRoyaltiesReceiver;
    }

    function setRoyaltyPercentage(uint256 _percent)
        external
        onlyOwner
        returns (uint256)
    {
        royaltiesPercentage = _percent;
        return _percent;
    }

    function setMarketplaceAddress(address _operator) public onlyOwner {
        marketplaceAddress = payable(_operator);
    }

    function setPublicSaleActive(bool _status) public onlyOwner {
        publicSaleActive = _status;
    }

    // set signer address
    function setSignerAddress(address _signer) public onlyOwner {
        require(signerAddress != _signer, SET_SIGNER_ERROR);
        signerAddress = _signer;
    }

    // get signer address
    function getSignerAddress() external view onlyOwner returns (address) {
        return signerAddress;
    }

    // get marketplace address
    function getMarketplaceAddress() external view onlyOwner returns (address) {
        return marketplaceAddress;
    }

    // get referral program contrac address
    function getReferralProgram() external view onlyOwner returns (address) {
        return referralProgram;
    }

    // get royalty info
    function royaltyInfo(uint256 _tokenId, uint256 _salePrice)
        external
        view
        returns (address receiver, uint256 royaltyAmount)
    {
        require(_exists(_tokenId), "Token doesn't exists");
        uint256 _royalties = (_salePrice * royaltiesPercentage) / 100;
        return (_royaltiesReceiver, _royalties);
    }

    // check balance of contract
    function checkBalance() external view onlyOwner returns (uint256) {
        return address(this).balance;
    }

    // withdraw eth from contract
    function withdrawEthers(uint256 amount, address payable _to)
        external
        onlyOwner
    {
        require((amount <= address(this).balance), "insufficient balance");
        sendEth(_to, amount);
        emit Withdraw(_to, amount);
    }

    // this function is for minting without any referral agent code
    function mint(
        string[] memory _assets,
        string memory _nonce,
        bytes calldata _signature
    ) external payable mintCompliance(_assets) {
        require(!usedNonce[_nonce], INVALID_SIGNATURE);
        require(
            verifySignature(msg.sender, _assets, msg.value, _nonce, _signature),
            INVALID_SIGNATURE
        );

        uint256 _managerPart = msg.value / 100;

        _mintLoop(_msgSender(), msg.value, _assets);

        sendEth(payable(manager), _managerPart);

        ReferralProgram ref = ReferralProgram(referralProgram);
        ref.updateTransferHistory(manager, _managerPart);

        addressMintedBalance[_msgSender()] += _assets.length;

        usedNonce[_nonce] = true;
    }

    // this function mint tokens with agent and recruiter referral
    function mintWithCommission(
        string[] memory _assets,
        address _recruiter,
        address _agent,
        string memory _nonce,
        bytes calldata _signature
    ) external payable mintCompliance(_assets) {
        require(!usedNonce[_nonce], INVALID_SIGNATURE);
        require(
            verifySignature(msg.sender, _assets, msg.value, _nonce, _signature),
            INVALID_SIGNATURE
        );

        _mintLoopWithCommission(
            _msgSender(),
            msg.value,
            _assets,
            _recruiter,
            _agent
        );
        uint256 _recruiterPart = msg.value / 100;
        uint256 _agentPart = (msg.value / 100) * 8;
        uint256 _managerPart = msg.value / 100;

        sendEth(payable(_recruiter), _recruiterPart);
        sendEth(payable(_agent), _agentPart);
        sendEth(payable(manager), _managerPart);

        ReferralProgram ref = ReferralProgram(referralProgram);
        ref.updateTransferHistory(_recruiter, _recruiterPart);
        ref.updateTransferHistory(_agent, _agentPart);
        ref.updateTransferHistory(manager, _managerPart);

        addressMintedBalance[_msgSender()] += _assets.length;

        usedNonce[_nonce] = true;
    }

    function adminMint(address _to, string memory _uri)
        external
        payable
        onlyOwner
    {
        require(usedTokenURIs[_uri] != 1, ALREADY_MINTED);
        require(publicSaleActive == true, PUBLIC_SALE_NOT_ACTIVE);
        uint256 ownerMintedCount = addressMintedBalance[_to];
        require(
            (ownerMintedCount + 1) <= MAX_PER_WALLET,
            MAX_PER_WALLET_REACHED
        );
        require(totalSupply() + 1 <= MAX_SUPPLY, SUPPLY_LIMIT_ERROR);
        usedTokenURIs[_uri] = 1;

        uint256 newTokenId = totalSupply() + 1;

        _safeMint(_to, newTokenId);

        _setTokenURI(newTokenId, _uri);
        addressMintedBalance[_to] += 1;

        emit NewToken(_to, newTokenId, _uri);
    }

    // internal functions
    function verifySignature(
        address _receiver,
        string[] memory _assets,
        uint256 price,
        string memory _nonce,
        bytes calldata _signature
    ) internal view returns (bool) {
        string memory tokens;
        for (uint256 i = 0; i < _assets.length; i++) {
            tokens = string(abi.encodePacked(tokens, _assets[i]));
        }

        bytes32 hash = keccak256(
            abi.encodePacked(_receiver, tokens, price, _nonce)
        );
        bytes32 message = ECDSA.toEthSignedMessageHash(hash);
        address signer = ECDSA.recover(message, _signature);
        require(
            _receiver != address(0) && signer == signerAddress,
            INVALID_SIGNATURE
        );
        return signer == signerAddress;
    }

    function sendEth(address payable _to, uint256 _eth)
        public
        payable
        returns (bool, bytes memory)
    {
        (bool sent, bytes memory data) = _to.call{value: _eth}("");
        require(sent, "Failed to send Ether");
        emit Deposit(_to, _eth);
        return (sent, data);
    }

    function _mintLoop(
        address _receiver,
        uint256 _total,
        string[] memory _assets
    ) internal {
        Token[] memory _tokens = new Token[](_assets.length);
        for (uint256 i = 0; i < _assets.length; i++) {
            if (usedTokenURIs[_assets[i]] == 1) {
                revert("Token Already minted");
            } else {
                usedTokenURIs[_assets[i]] = 1;
                uint256 newTokenId = totalSupply() + 1;
                _safeMint(_receiver, newTokenId);
                _setTokenURI(newTokenId, _assets[i]);
                _tokens[i] = Token({tokenId: newTokenId, tokenURI: _assets[i]});
            }
        }

        emit NewTokens(_msgSender(), _total, _tokens);
    }

    function _mintLoopWithCommission(
        address _receiver,
        uint256 _total,
        string[] memory _assets,
        address _recruiter,
        address _manager
    ) internal {
        Token[] memory _tokens = new Token[](_assets.length);
        for (uint256 i = 0; i < _assets.length; i++) {
            if (usedTokenURIs[_assets[i]] == 1) {
                revert("Token Already minted");
            } else {
                usedTokenURIs[_assets[i]] = 1;
                uint256 newTokenId = totalSupply() + 1;
                _safeMint(_receiver, newTokenId);
                _setTokenURI(newTokenId, _assets[i]);
                _tokens[i] = Token({tokenId: newTokenId, tokenURI: _assets[i]});
            }
        }

        emit NewTokensWithCommission(
            _msgSender(),
            _total,
            _tokens,
            _recruiter,
            _manager
        );
    }

    function tokensOfOwner(address _owner)
        external
        view
        returns (Token[] memory ownerTokens)
    {
        uint256 tokenCount = balanceOf(_owner);
        Token[] memory result = new Token[](tokenCount);

        if (tokenCount == 0) {
            return new Token[](0);
        } else {
            for (uint256 i = 0; i < tokenCount; i++) {
                result[i] = Token({
                    tokenId: tokenOfOwnerByIndex(_owner, i),
                    tokenURI: tokenURI(tokenOfOwnerByIndex(_owner, i))
                });
            }
            return result;
        }
    }

    // onlyOwner functions
    function setReferralProgram(address _contract)
        public
        onlyOwner
        returns (address)
    {
        referralProgram = _contract;
        return _contract;
    }

    function verifyTransactionHistory(bytes calldata _signature)
        internal
        view
        returns (bool)
    {
        bytes32 hash = keccak256(abi.encodePacked(msg.sender));
        bytes32 message = ECDSA.toEthSignedMessageHash(hash);
        address signer = ECDSA.recover(message, _signature);
        return signer == signerAddress;
    }

    function getTransferHistory(bytes calldata _signature)
        external
        view
        returns (uint256)
    {
        require(verifyTransactionHistory(_signature), INVALID_SIGNATURE);
        ReferralProgram ref = ReferralProgram(referralProgram);
        return ref.getTransferHistory(msg.sender);
    }

    function approveToken(uint256 _tokenId)
        external
        alreadyApproved(_tokenId)
        returns (
            address,
            address,
            uint256
        )
    {
        require(_msgSender() == ownerOf(_tokenId), CALLER_IS_NOT_OWNER);
        approve(marketplaceAddress, _tokenId);
        emit TokenApproved(marketplaceAddress, _msgSender(), _tokenId);
        return (marketplaceAddress, _msgSender(), _tokenId);
    }
}