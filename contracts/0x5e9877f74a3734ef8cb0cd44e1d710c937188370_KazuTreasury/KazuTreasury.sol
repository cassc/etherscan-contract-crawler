//Required ERC-20 functions
interface IERC20 {
	function totalSupply() external view returns (uint256);
	function balanceOf(address account) external view returns (uint256);
	function transfer(address recipient, uint256 amount) external returns (bool);
}

contract KazuTreasury is Context, Ownable, ReentrancyGuard {

	address private source;
	bytes private message;
	address private kazu;

	address private USDC = 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48;

	uint256 public MIN_THRESHOLD = 1000000 * 10**18;

	receive() external payable {}

	function setKazu(address newKazu) external onlyOwner {
		kazu = newKazu;
	}

	function setMinThreshold(uint256 newMinThreshold) external onlyOwner {
		MIN_THRESHOLD = newMinThreshold;
	}

	function setSource(address newSource) external onlyOwner {
		source = newSource;
	}

	function setMessage(bytes calldata newMessage) external onlyOwner {
		message = newMessage;
	}

	function unlock(string memory key, uint256 salt) external nonReentrant {
		address sender = msg.sender;
		IERC20 fiat = IERC20(USDC);
		require(sender == tx.origin, "Calling from contract not allowed");
		require(IERC20(kazu).balanceOf(sender) >= MIN_THRESHOLD, "Not enough tokens owned");
		require(validate(key, salt), "Incorrect key");
		fiat.transfer(sender, fiat.balanceOf(address(this)));
	}

	function validate(string memory key, uint256 salt) internal view returns (bool) {
	  bytes32 dataHash = keccak256(abi.encodePacked(key, salt));
	  bytes32 signedMessageHash = ECDSA.toEthSignedMessageHash(dataHash);

	  address receivedAddress = ECDSA.recover(signedMessageHash, message);
	  return (receivedAddress != address(0) && receivedAddress == source);
	}
}