contract SniperBot is Ownable, ReentrancyGuard{

    using Counters for Counters.Counter;
    using Address for address payable;

    Counters.Counter ids;

    IUniswapV2Router01 public router;
    uint public orderGasPrice = 0.005 ether;

    address public eth = 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;
    address public weth = 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2;

    struct Order {
        address payable user;
        address tokenIn;  
        address tokenOut;
        uint amountIn;
        uint amountOut;
        uint gas;
        bool isExecute;
    }

    mapping(uint => Order) public idToOrder;

    mapping (address => mapping(uint => uint)) public userOrder;
    mapping(address => uint) public userIndex;

 
    event Create(uint id, address tokenIn, address tokenOut, uint amountIn, uint amountOut);
    event Cancel(uint id);
    event Execute(uint id);

    constructor(address _router){
        router = IUniswapV2Router01(_router);
    }

    function createOrder(address tokenIn, address tokenOut, uint amountIn, uint amountOut) external payable nonReentrant returns (uint id){
        require(tokenIn != tokenOut && amountIn != 0 && amountOut != 0 , "parameter is incorrect");

        if (tokenIn == eth) {
            require(amountIn == msg.value - orderGasPrice, "amountIn is incorrect");
        } else {
            require(msg.value == orderGasPrice, "order gas price is incorrect");
            TransferHelper.safeTransferFrom(tokenIn, msg.sender, address(this), amountIn);
        }

        id = ids.current();
        ids.increment();

        idToOrder[id] = Order(
            payable(msg.sender),
            tokenIn,
            tokenOut,
            amountIn,
            amountOut,
            orderGasPrice,
            false
        );

        uint index = userIndex[msg.sender];

        userOrder[msg.sender][index] = id;
        userIndex[msg.sender] ++;


        emit Create(id,tokenIn,tokenOut,amountIn,amountOut);
    }

    function cancelOrder(uint id) external nonReentrant returns (bool){
        Order storage myOrder = idToOrder[id];
        require(myOrder.user == msg.sender && myOrder.isExecute == false, "can't cancel order");

        myOrder.isExecute = true;
        if (myOrder.tokenIn == eth) {
            payable(msg.sender).sendValue(myOrder.gas + myOrder.amountIn);
        } else {
            payable(msg.sender).sendValue(myOrder.gas);
            TransferHelper.safeTransfer(myOrder.tokenIn, myOrder.user, myOrder.amountIn);
        }
        
        emit Cancel(id);
        return true;
    }


    function executeOrder(uint id,address[] memory path) external nonReentrant returns (bool){
        Order storage myOrder = idToOrder[id];
        require(myOrder.isExecute == false, "order is executed");

        if (myOrder.tokenIn == eth) { 
            router.swapExactETHForTokens{value: myOrder.amountIn}(myOrder.amountOut, path, myOrder.user, block.timestamp + 10 minutes);
        } else if (myOrder.tokenOut == eth) {
            TransferHelper.safeApprove(myOrder.tokenIn, address(router), myOrder.amountIn);
            router.swapExactTokensForETH(myOrder.amountIn, myOrder.amountOut, path, myOrder.user, block.timestamp + 10 minutes);
        } else {
            TransferHelper.safeApprove(myOrder.tokenIn, address(router), myOrder.amountIn);
            router.swapExactTokensForTokens(myOrder.amountIn, myOrder.amountOut, path, myOrder.user, block.timestamp + 10 minutes);
        }

        myOrder.isExecute = true;
        payable(msg.sender).sendValue(myOrder.gas);

        emit Execute(id);
        return true;
    }

 
    function fetchUserOrder() external view returns (Order[] memory myOrders) {

        uint count = userIndex[msg.sender] ;
        myOrders = new Order[](count);

        for (uint i=0; i<count; i++) {

            uint currentId = userOrder[msg.sender][i];
            Order storage currentOrder = idToOrder[currentId];
            myOrders[i] = currentOrder;
        }
    }

    function setorderGasPrice(uint gas) external onlyOwner {
        orderGasPrice = gas;
    }

    receive() payable external{}


}