        string memory cid
    ) internal view returns (Banner memory) {
        Banner[] memory banners = userBanners[userAddress];
        for (uint i = 0; i < banners.length; i++) {
            if (compareStrings(banners[i].cid, cid)) {
                return banners[i];
            }
        }
        return Banner(0, 0, "");
    }

    function compareStrings(
        string memory a,
        string memory b
    ) internal pure returns (bool) {
        return keccak256(abi.encodePacked(a)) == keccak256(abi.encodePacked(b));
    }

    function getBannerMetadataUri(Banner memory banner) internal pure returns (string memory) {
        return string(abi.encodePacked("ipfs://", banner.cid, "/metadata.json"));
    }
}