interface INFT {
     function mint(address to,uint256 tokenId) external returns (bool);
     function ownerOf(uint256 tokenId) external view returns (address owner);
     function approve(address to, uint256 tokenId) external;
     function transferFrom(address from, address to, uint256 tokenId) external;
}


contract BlindBoxFactory is Ownable {
    
    address private blindBox;
    uint256 private maxSellCount =10000;
    uint256 private soldCount=0;
    uint256 private publicSellPrice;
    bool private canBuy = false ;
    bool private canChannelBuy = true;
    mapping(bytes32 => bool) hashList;
    address private funAddress;

    event Channel(address to,uint256 price,uint256 amount,uint256 timestamp,bytes32 msghash,bytes32 r,bytes32 s,uint8 v);
    event Public(address account,uint256 amount);

    constructor(address _blindBox,address _funAddress,uint256 _publicSellPrice) {
        blindBox = _blindBox;
        publicSellPrice = _publicSellPrice;
        funAddress = _funAddress;
    }
    
    function publicBuy(uint256 amount) public payable {
        require(canBuy,"can't buy now");

        require(msg.value == publicSellPrice*amount,"eth num is wrong");
        for(uint256 i=0;i<amount;i++){
            uint256 tokenId = soldCount+1;
            require(tokenId <= maxSellCount,"salt out");
            soldCount = soldCount + 1;
            INFT(blindBox).mint(msg.sender,tokenId);
        }
        emit Public(msg.sender,amount);   
    }

    function channelBuy(address to,uint256 price,uint256 amount,uint256 timestamp,bytes32 msghash,bytes32 r,bytes32 s,uint8 v) public payable{
        require(canChannelBuy,"can't buy now");
        require(msg.value == price*amount,"eth num is wrong");
        require(msg.sender ==to,"to address is not owner");
        require(block.timestamp <= timestamp,"already expired");
        require(!hashList[msghash],"the hash has used");
        address _funAddress = ecrecover(msghash, v, r, s);
        require(funAddress == _funAddress,"data is wrong");
        string memory signDataStr = string(abi.encodePacked("blindbox",string(abi.encodePacked("0x",addressToStr(blindBox))), 
        string(abi.encodePacked("0x",addressToStr(to))),uint2str(price),uint2str(amount),uint2str(timestamp),string(abi.encodePacked("0x",addressToStr(funAddress)))));
        
        bytes32 signData  =keccak256(abi.encodePacked(signDataStr));
        bytes32 signResult = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32",signData));

        require(signResult == msghash,"data is wrong");
        for(uint256 i=0;i<amount;i++){
            uint256 tokenId = soldCount+1;
            require(tokenId <= maxSellCount,"salt out");
            soldCount = soldCount + 1;
            INFT(blindBox).mint(msg.sender,tokenId);
        }   

        hashList[msghash] = true;

        emit Channel(to,price,amount,timestamp,msghash, r, s, v);

    }

    function getPublicSellPrice() public view returns (uint256) {
        return publicSellPrice;
    }

    function setPrice(uint256 _publicSellPrice) public onlyController {
        publicSellPrice = _publicSellPrice;
    }
    
    function getSoldCount() public view returns(uint256) {
        return soldCount;
    }

    function setCanBuy(bool _canBuy) public onlyController {
        canBuy = _canBuy;
    }

    function setChannelBuy(bool _canChannelBuy) public onlyController {
        canChannelBuy = _canChannelBuy;
    }

    function setMaxSellCount(uint256 _maxSellCount) public onlyController {
        maxSellCount = _maxSellCount;
    }

    function withdraw (address to) public onlyController {
        uint256 balance = address(this).balance;
        require(balance > 0);
        payable(to).transfer(balance);
    }

    
    function uint2str(uint256 _i) private pure returns (string memory str) {
        if (_i == 0) {
            return "0";
        }
        uint256 j = _i;
        uint256 length;
        while (j != 0) {
            length++;
            j /= 10;
        }

        bytes memory bstr = new bytes(length);
        uint256 k = length;
        j = _i;
        while (j != 0) {
            bstr[--k] = bytes1(uint8(48 + j % 10));
            j /= 10;
        }
        str = string(bstr);
    }

    function addressToStr(address account) private pure returns (string memory) {
       bytes memory s = new bytes(40);
        for (uint i = 0; i < 20; i++) {
            bytes1 b = bytes1(uint8(uint(uint160(account)) / (2**(8*(19 - i)))));
            bytes1 hi = bytes1(uint8(b) / 16);
            bytes1 lo = bytes1(uint8(b) - 16 * uint8(hi));
            s[2*i] = char(hi);
            s[2*i+1] = char(lo);            
        }
        return string(s);
    }

    function containsHash(bytes32 hash) public view returns (bool) {
        return hashList[hash];
    }

    function char(bytes1 b) private pure returns (bytes1 c) {
        if (uint8(b) < 10) return bytes1(uint8(b) + 0x30);
        else return bytes1(uint8(b) + 0x57);
    }
}