interface IGldmNode {
    struct User {
        uint256 total_deposits;
        uint256 total_claims;
        uint256 last_distPoints;
    }

    function users(address _addr) external view returns(User calldata);
    function nodes(address _addr, uint256 _tier) external view returns(uint256);
    function whitelist(address _addr) external view returns(bool);

    function getTotalRewards(address _addr) external view returns(uint256);
    function getDistributionRewards(address account) external view returns (uint256);
    function allocPoints(address account) external view returns (uint256);
    function maxPayout(address _sender) external view returns (uint256);
    function lastDripTime() external view returns(uint256);
    function rewardPerSec() external view returns(uint256);
}

contract GldmNodeV2 {
    using SafeMath for uint256;

    address public operator;
    IGldmNode public oldNode;

    address public bgldm;

    mapping (address => uint256) public claimed;

    modifier onlyOperator() {
        require(operator == msg.sender, "GldmNodeV2: caller is not operator");
        _;
    }

    constructor (address _oldNode, address _blgldm) {
        oldNode = IGldmNode(_oldNode);
        bgldm = _blgldm;

        operator = msg.sender;
    }

    function getTotalRewards(address _addr) public view returns(uint256){
        if ( oldNode.users(_addr).total_deposits == 0) return 0;
        uint256 distributionReward = oldNode.getDistributionRewards(msg.sender);
        uint256 lastDripTime = oldNode.lastDripTime();
        uint256 secondsPassed = block.timestamp.sub(lastDripTime);
        uint256 rewardPerSec = oldNode.rewardPerSec();
        uint256 drip = secondsPassed.mul(rewardPerSec);
        uint256 allocPoints = oldNode.allocPoints(_addr);
        uint256 rewards =distributionReward.add(drip.mul(allocPoints));

        uint256 maxPayout = oldNode.maxPayout(_addr);
        uint256 totalClaims = oldNode.users(_addr).total_claims;
        uint256 tReward = totalClaims.add(rewards) > maxPayout ? maxPayout.sub(totalClaims) : rewards;
        return tReward.sub(claimed[_addr]);
    }

    function claim() public {
        uint256 claimable = getTotalRewards(msg.sender);
        IERC20(bgldm).transfer(msg.sender, claimable);
        claimed[msg.sender] = claimed[msg.sender].add(claimable);
    }

    function withdraw(address _token) public onlyOperator{
        IERC20(_token).transfer(msg.sender, IERC20(_token).balanceOf(address(this)));
    }

}