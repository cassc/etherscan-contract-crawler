contract TokenLockV3 is ITokenLockV3, Ownable {
    using Address for address payable;
    using EnumerableSet for EnumerableSet.AddressSet;
    using EnumerableSet for EnumerableSet.UintSet;

    struct Lock {
        uint256 id;
        address token;
        address owner;
        uint256 tokenId;
        uint256 lockDate;
        uint256 tgeDate; // TGE date for vesting locks, unlock date for normal locks
        string description;
        bool isUnlocked;
    }

    uint256 public editFee;
    uint256 public withdrawFee;
    address public fundAddress;

    Lock[] private _locks;
    mapping(address => EnumerableSet.UintSet) private _userLockIds;

    EnumerableSet.UintSet private _lockedTokens;
    mapping(address => EnumerableSet.UintSet) private _tokenToLockIds;

    event LockAdded(
        uint256 indexed id,
        address token,
        address owner,
        uint256 tokenId,
        uint256 unlockDate
    );
    event LockUpdated(
        uint256 indexed id,
        address token,
        address owner,
        uint256 tokenId,
        uint256 newUnlockDate
    );
    event LockRemoved(
        uint256 indexed id,
        address token,
        address owner,
        uint256 tokenId,
        uint256 unlockedAt
    );

    event LockDescriptionChanged(uint256 lockId);
    event LockOwnerChanged(uint256 lockId, address owner, address newOwner);
    event EditFeeChanged(address _operator, uint256 _editFee);
    event WithdrawFeeChanged(address _operator, uint256 _withdrawFee);
    event FundAddressChanged(address _operator, address _newAddress);

    constructor(uint256 _editFee, uint256 _withdrawFee, address _fundAddress) {
        editFee = _editFee;
        withdrawFee = _withdrawFee;
        fundAddress = _fundAddress;
    }

    function lock(
        address owner,
        address token,
        uint256 tokenId,
        uint256 unlockDate,
        string memory description
    ) external override returns (uint256 id) {
        require(token != address(0), "Invalid token");
        require(
            unlockDate > block.timestamp,
            "Unlock date should be in the future"
        );
        id = _lockToken(
            owner,
            token,
            tokenId,
            unlockDate,
            description
        );
        IERC721(token).transferFrom(msg.sender, address(this), tokenId);
        emit LockAdded(id, token, owner, tokenId, unlockDate);
        return id;
    }

    function setEditFee(uint256 _editFee) external onlyOwner {
        editFee = _editFee;
        emit EditFeeChanged(msg.sender, _editFee);
    }
    
    function setWithdrawFee(uint256 _withdrawFee) external onlyOwner {
        withdrawFee = _withdrawFee;
        emit WithdrawFeeChanged(msg.sender, _withdrawFee);
    }

    function setFundAddress(address _newAddress) external onlyOwner {
        require(fundAddress != _newAddress, "same addr");
        fundAddress = _newAddress;
        emit FundAddressChanged(msg.sender, _newAddress);
    }

    function _lockToken(
        address owner,
        address token,
        uint256 tokenId,
        uint256 tgeDate,
        string memory description
    ) private returns (uint256 id) {
        id = _locks.length;
        Lock memory newLock = Lock({
            id: id,
            token: token,
            owner: owner,
            tokenId: tokenId,
            lockDate: block.timestamp,
            tgeDate: tgeDate,
            description: description,
            isUnlocked: false
        });
        _locks.push(newLock);
        _userLockIds[owner].add(id);
        _lockedTokens.add(id);
        _tokenToLockIds[token].add(id);
    }


    function unlock(uint256 lockId) external payable override {
        Lock storage userLock = _locks[lockId];
        require(
            userLock.owner == msg.sender,
            "You are not the owner of this lock"
        );
        require(msg.value >= withdrawFee, "has no enough fee");
        if(withdrawFee > 0){
            payable(fundAddress).transfer(withdrawFee);
        }

        _unlock(userLock);
        
    }

    function _unlock(Lock storage userLock) internal {
        require(
            block.timestamp >= userLock.tgeDate,
            "It is not time to unlock"
        );
        require(!userLock.isUnlocked, "Lock was unlocked");

        _userLockIds[msg.sender].remove(userLock.id);
        userLock.isUnlocked = true;
        _lockedTokens.remove(userLock.id);
        _tokenToLockIds[userLock.token].remove(userLock.id);
        IERC721(userLock.token).safeTransferFrom(address(this), msg.sender, userLock.tokenId);

        emit LockRemoved(
            userLock.id,
            userLock.token,
            msg.sender,
            userLock.tokenId,
            block.timestamp
        );
    }

    function editLock(
        uint256 lockId,
        uint256 newUnlockDate
    ) external payable override {
        Lock storage userLock = _locks[lockId];
        require(
            userLock.owner == msg.sender,
            "You are not the owner of this lock"
        );
        require(!userLock.isUnlocked, "Lock was unlocked");
        require(msg.value >= editFee, "has no enough fee");
        if(editFee > 0){
            payable(fundAddress).transfer(editFee);
        }

        if (newUnlockDate > 0) {
            require(
                newUnlockDate >= userLock.tgeDate &&
                    newUnlockDate > block.timestamp,
                "New unlock time should not be before old unlock time or current time"
            );
            userLock.tgeDate = newUnlockDate;
        }

        emit LockUpdated(
            userLock.id,
            userLock.token,
            userLock.owner,
            userLock.tokenId,
            userLock.tgeDate
        );
    }

    function editLockDescription(uint256 lockId, string memory description)
        external
    {
        Lock storage userLock = _locks[lockId];
        require(
            userLock.owner == msg.sender,
            "You are not the owner of this lock"
        );
        userLock.description = description;
        emit LockDescriptionChanged(lockId);
    }

    function transferLockOwnership(uint256 lockId, address newOwner)
        public
    {
        Lock storage userLock = _locks[lockId];
        address currentOwner = userLock.owner;
        require(
            currentOwner == msg.sender,
            "You are not the owner of this lock"
        );

        userLock.owner = newOwner;
        _userLockIds[currentOwner].remove(lockId);
        _userLockIds[newOwner].add(lockId);
        
        emit LockOwnerChanged(lockId, currentOwner, newOwner);
    }

    function renounceLockOwnership(uint256 lockId) external {
        transferLockOwnership(lockId, address(0));
    }

    function withdraw(
        address payable recipient,
        uint256 amount
    ) external onlyOwner {
        recipient.transfer(amount);
    }

    function getTotalLockCount() external view returns (uint256) {
        // Returns total lock count, regardless of whether it has been unlocked or not
        return _locks.length;
    }

    function getLockedLockCount() external view returns (uint256) {
        // Returns total lock count, regardless of whether it has been unlocked or not
        return _lockedTokens.length();
    }

    function getAllTokenLockInfo(uint256 start, uint256 end)
        external
        view
        returns (Lock[] memory)
    {
        if (end >= _locks.length) {
            end = _locks.length - 1;
        }
        uint256 length = end - start + 1;
        Lock[] memory lockInfo = new Lock[](length);
        uint256 currentIndex = 0;
        for (uint256 i = start; i <= end; i++) {
            lockInfo[currentIndex] = _locks[i];
            currentIndex++;
        }
        return lockInfo;
    }

    function getLockedTokenLockInfo(uint256 start, uint256 end)
        external
        view
        returns (Lock[] memory)
    {
        if (end >= _lockedTokens.length()) {
            end = _lockedTokens.length() - 1;
        }
        uint256 length = end - start + 1;
        Lock[] memory lockInfo = new Lock[](length);
        uint256 currentIndex = 0;
        for (uint256 i = start; i <= end; i++) {
            lockInfo[currentIndex] = getLockAt(_lockedTokens.at(i));
            currentIndex++;
        }
        return lockInfo;
    }

    function getLockAt(uint256 index) public view returns (Lock memory) {
        return _locks[index];
    }

    function getLockById(uint256 lockId) public view returns (Lock memory) {
        return _locks[lockId];
    }

    function allTokenLockedCount() public view returns (uint256) {
        return _lockedTokens.length();
    }

    function lockCountForUser(address user)
        public
        view
        returns (uint256)
    {
        return _userLockIds[user].length();
    }

    function locksForUser(address user)
        external
        view
        returns (Lock[] memory)
    {
        uint256 length = _userLockIds[user].length();
        Lock[] memory userLocks = new Lock[](length);

        for (uint256 i = 0; i < length; i++) {
            userLocks[i] = getLockById(_userLockIds[user].at(i));
        }
        return userLocks;
    }

    function lockForUserAtIndex(address user, uint256 index)
        external
        view
        returns (Lock memory)
    {
        require(lockCountForUser(user) > index, "Invalid index");
        return getLockById(_userLockIds[user].at(index));
    }

    function totalLockCountForToken(address token)
        external
        view
        returns (uint256)
    {
        return _tokenToLockIds[token].length();
    }

    function getLocksForToken(
        address token,
        uint256 start,
        uint256 end
    ) public view returns (Lock[] memory) {
        if (end >= _tokenToLockIds[token].length()) {
            end = _tokenToLockIds[token].length() - 1;
        }
        uint256 length = end - start + 1;
        Lock[] memory locks = new Lock[](length);
        uint256 currentIndex = 0;
        for (uint256 i = start; i <= end; i++) {
            locks[currentIndex] = getLockById(_tokenToLockIds[token].at(i));
            currentIndex++;
        }
        return locks;
    }

    receive() external payable {}

    fallback() external payable {}
}