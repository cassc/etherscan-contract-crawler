  function tokenID2str(uint256 _i) internal pure returns (string memory str) {
    // unused case unless there is a token ID of 0. we don't have one.
    // if (_i == 0) {
    //   return "0";
    // }

    uint256 j = _i;
    uint256 length;
    while (j != 0) {
      length++;
      j /= 10;
    }
    bytes memory bstr = new bytes(length);
    uint256 k = length;
    j = _i;
    while (j != 0) {
      bstr[--k] = bytes1(uint8(48 + j % 10));
      j /= 10;
    }
    str = string(bstr);
  }
