import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./../interfaces/IERC20Extras.sol";
import "contracts/admin/SuperAdminControl.sol";

contract GToken is Context, IERC20, IERC20Metadata, Ownable, SuperAdminControl {
    mapping(address => uint256) private _balances;
    mapping(address => mapping(address => uint256)) private _allowances;

    uint256 private _totalSupply;
    string private _name;
    string private _symbol;

    IERC20 public spToken;
    IERC20Extras public spTokenExtras;
    address public liquidatorContract;
    address public tokenMarketContract;
    address public adminRegistry;

    mapping(address => bool) public whitelistReceivers;

    /**
     * Setup the initial supply and types of vesting schemas
     **/
    constructor(
        string memory name_,
        string memory symbol_,
        address _spToken,
        address _liquidatorContract,
        address _tokenMarketContract,
        address _adminRegistry
    ) {
        _name = name_;
        _symbol = symbol_;
        spToken = IERC20(_spToken);
        spTokenExtras = IERC20Extras(_spToken);
        tokenMarketContract = _tokenMarketContract;
        liquidatorContract = _liquidatorContract;
        adminRegistry = _adminRegistry;

        whitelistReceivers[_liquidatorContract] = true;
        whitelistReceivers[_tokenMarketContract] = true;
        whitelistReceivers[address(0)] = true;
        whitelistReceivers[address(this)] = true;
    }

    modifier onlyTokenMarket() {
        require(
            msg.sender == tokenMarketContract,
            "GToken: Unauthorized Access!"
        );
        _;
    }

    modifier onlyWhitelistedReceiver(address _receiver) {
        require(
            whitelistReceivers[_receiver],
            "GToken: only whitelisted receiver allowed"
        );
        _;
    }

    function setWhitelistReceiver(
        address _newWhitelisteReceiver,
        bool _isAllowed
    ) external onlySuperAdmin(adminRegistry, msg.sender) {
        bool prevState = whitelistReceivers[_newWhitelisteReceiver];
        require(
            _newWhitelisteReceiver != address(0),
            "GToken: address not allowed"
        );
        require(prevState != _isAllowed, "GToken: already in desired state");
        whitelistReceivers[_newWhitelisteReceiver] = _isAllowed;
    }

    function getMaxTotalSupply() public view returns (uint256) {
        return spToken.totalSupply();
    }

    function mint(address account, uint256 amount) external onlyTokenMarket {
        uint256 currentTotalSupply = totalSupply();
        require(
            getMaxTotalSupply() >= currentTotalSupply + amount,
            "Maximum supply exceeded!"
        );
        _mint(account, amount);
        //always keep apprroval with token market to burn in case of liquidation
        uint256 currentAllowance = this.allowance(account, owner());
        _approve(account, owner(), currentAllowance + amount);
    }

    /**
     * @dev Returns the name of the token.
     */
    function name() public view virtual override returns (string memory) {
        return _name;
    }

    /**
     * @dev Returns the symbol of the token, usually a shorter version of the
     * name.
     */
    function symbol() public view virtual override returns (string memory) {
        return _symbol;
    }

    /**
     * @dev Returns the number of decimals used to get its user representation.
