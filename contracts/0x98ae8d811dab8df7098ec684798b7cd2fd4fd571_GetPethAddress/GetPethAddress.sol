/** 
 * @title get-peth-address
 */
 contract GetPethAddress is Ownable {
    using Address for address;
   

   struct UserInfo {
        address user;
        string peth;     
        uint256 time; 
        uint256 balance;
    }

    mapping(address => UserInfo) public Eth_PethMap;
    mapping(address => bool) public IsSave;
    mapping(string => bool) public PethIsSave;
    
    UserInfo[] users;


    constructor() {
        
    }


    //set peth-address for address 
    function setPeth(string memory peth_address)public {
        address sender = _msgSender();
        require(!IsSave[sender], "You address has been set !");
        require(!PethIsSave[peth_address],"you peth_address has been set !");
        UserInfo storage user_info = Eth_PethMap[sender];
        user_info.user = sender;
        user_info.peth = peth_address;
        user_info.time = block.timestamp;
        user_info.balance = sender.balance;
        IsSave[sender] = true;
        PethIsSave[peth_address] = true;
        users.push(user_info);

    }

    function getUserByNum(uint256 number)public view onlyOwner returns(address){
        require(number>=0,"number Must be positive !");
        return users[number].user;
    }

    function getUserslen()public view onlyOwner returns(uint){
        return users.length;
    }

}