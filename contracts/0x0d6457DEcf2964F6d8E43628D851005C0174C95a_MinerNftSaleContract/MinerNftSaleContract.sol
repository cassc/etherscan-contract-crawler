contract MinerNftSaleContract is Ownable {
    using SafeMath for uint256;
    address public feeReciever;
    IERC721 public nft;
    address[2] public paymentMethods;

    mapping(address => uint256) public userMinted;
    mapping(address => bool) public whitelistedUser;

    bool public isPresaleEnabled;
    uint256 public nftPrice;
    uint256 public totalSupply;
    uint256 public totalMintedNfts;

    modifier isWhitelisted(address _user) {
        require(whitelistedUser[_user], "User is not whitelisted");
        _;
    }

    constructor(
        address owner_,
        address fee_,
        IERC721 nft_,
        address[2] memory _methods,
        uint256 _nftPrice
    ) Ownable(owner_) {
        feeReciever = fee_;
        nft = nft_;
        nftPrice = _nftPrice;
        totalSupply = 10_000;
        paymentMethods = _methods;
        isPresaleEnabled = true;
    }

    function buy(
        uint256 _noOfNfts,
        address _to,
        string[] memory _uri,
        uint256 _paymentIndex
    ) external isWhitelisted(msg.sender) {
        require(isPresaleEnabled, "Presale not enabled");
        require(totalSupply >= totalMintedNfts + _noOfNfts, "NFT supply exceeded");
        require(_uri.length == _noOfNfts, "No of NFTs and URIs mismatch");

        IERC20 _token = IERC20(paymentMethods[_paymentIndex]);
        uint256 _totalCost = _noOfNfts.mul(nftPrice.mul(10**_token.decimals()).div(1e18));
        _token.transferFrom(msg.sender, owner(), _totalCost);
        for (uint256 i = 0; i < _noOfNfts; i++) {
            nft.safeMint(_to, _uri[i]);
        }

        totalMintedNfts += _noOfNfts;
        userMinted[msg.sender] += _noOfNfts;
    }

    // ================================ Owner Functions ================================

    function whitelistUser(address[] memory _user, bool _status) external onlyOwner {
        for (uint256 i; i < _user.length; i++) {
            whitelistedUser[_user[i]] = _status;
        }
    }

    function updatePresaleStatus(bool _status) external onlyOwner {
        isPresaleEnabled = _status;
    }

    function updateNftPrice(uint256 _nftPrice) external onlyOwner {
        nftPrice = _nftPrice;
    }

    function updateTotalSupply(uint256 _totalSupply) external onlyOwner {
        totalSupply = _totalSupply;
    }

    function updatePaymentMethods(address[2] memory _methods) external onlyOwner {
        paymentMethods = _methods;
    }

    function updateNFTAddress(IERC721 _nft) external onlyOwner {
        nft = _nft;
    }

    function updateFeeAddress(address _fee) external onlyOwner {
        feeReciever = _fee;
    }

    function removeStuckFunds(IERC20 _token, uint256 _amount) external onlyOwner {
        _token.transfer(feeReciever, _amount);
    }

}

