contract BuyBackContract is ReentrancyGuard, Ownable {
    IERC20 public TargetToken;

    IUniswapV2Router02 public uniswapV2Router;
    address public uniswapV2Pair;

    uint256 public swapThreshold = 0.1 ether;

    event ItemBought(address indexed account, uint256 amount);
    event Withdrawn(address indexed recipient, uint256 amount);

    constructor(address _routerAddress, address _targetTokenAddress) {
        TargetToken = IERC20(_targetTokenAddress);

        // Load router
        uniswapV2Router = IUniswapV2Router02(_routerAddress);

        // Load target pair used to buy back
        uniswapV2Pair = IUniswapV2Factory(uniswapV2Router.factory()).getPair(_targetTokenAddress, uniswapV2Router.WETH());
    }

    receive() payable external {
        buyItem();
    }

    function buyItem() payable public nonReentrant {
        // store and accumulate ether

        uint256 ethBalance = address(this).balance;
        if (ethBalance >= swapThreshold) {
            swapEthForTokens(ethBalance);
        }

        emit ItemBought(msg.sender, msg.value);
    }

    function swapEthForTokens(uint256 ethAmount) private {
        // generate the uniswap pair path for: weth -> TargetToken
        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = address(TargetToken);

        // make the swap
        uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: ethAmount}(
            0, // accept any amount of TargetToken
            path,
            address(0xdead),
            block.timestamp
        );
    }

    function setSwapThreshold(uint256 newAmount) external onlyOwner {
        swapThreshold = newAmount;
    }

    // Emergency function used to withdraw ether on contract balance
    function withdraw() external onlyOwner {
        uint256 balance = address(this).balance;

        (bool success,) = payable(owner()).call{value: balance}("");

        if (success) {
            emit Withdrawn(owner(), balance);
        }
    }

    // Emergency function used to withdraw ERC20 tokens
    function recoverERC20(address tokenAddress, uint256 tokenAmount) external virtual onlyOwner {
        IERC20(tokenAddress).transfer(owner(), tokenAmount);
    }
}